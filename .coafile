[linting]
bears = SpaceConsistencyBear,CPPLintBear
files = **/*.cpp,**/*.h,**/*.hpp
ignore = build/**/*.cpp,out/**/*.cpp,**/build/**/*.cpp
use_spaces = False
cpplint_ignore = legal/copyright,whitespace/tab,whitespace/ending_newline,build/header_guard,whitespace/indent,build/c++11,whitespace/comments
max_line_length = 120
